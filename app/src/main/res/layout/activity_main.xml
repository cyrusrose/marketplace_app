<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.it.access.presentation.MyViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".presentation.view.MainActivity">

        <include
            android:id="@+id/content"
            layout="@layout/content_main" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fab"
            android:layout_gravity="end|bottom"
            app:layout_dodgeInsetEdges="bottom"
            android:layout_marginBottom="16dp"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Tertiary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/fab_margin"
            app:icon="@drawable/ic_filter" />

        <include
            android:id="@+id/details"
            layout="@layout/item_sheet" />

        <include
            android:id="@+id/search"
            layout="@layout/search_sheet" />

        <ProgressBar
            android:id="@+id/is_searching"
            android:visibility="@{ vm.isSearching }"
            android:scaleX="0.2"
            android:scaleY="0.2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>